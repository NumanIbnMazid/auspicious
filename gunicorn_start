NAME="auspicious"
DIR=/home/auspicious/Auspicious
USER=auspicious
GROUP=auspicious
WORKERS=3
BIND=unix:/home/auspicious/run/gunicorn.sock
DJANGO_SETTINGS_MODULE=auspicious.settings.production
DJANGO_WSGI_MODULE=auspicious.wsgi
LOG_LEVEL=error

cd $DIR
source ../bin/activate

export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DIR:$PYTHONPATH

exec ../bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
  --name $NAME \
  --workers $WORKERS \
  --user=$USER \
  --group=$GROUP \
  --bind=$BIND \
  --log-level=$LOG_LEVEL \
  --log-file=-
